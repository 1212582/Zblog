<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.springframework.org/schema/aop 
                           http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">
   
  <bean id="template" class="com.zblog.biz.aop.StaticTemplate" />
  <aop:config proxy-target-class="true">
    <aop:aspect ref="template">
      <!-- 定义切点· -->
      <aop:pointcut id="p-category" expression="execution(* com.zblog.service.CategoryService.insert*(..)) || execution(* com.zblog.service.CategoryService.remove*(..))" />
      <aop:after method="staticHeader" pointcut-ref="p-category" />
      
      <aop:pointcut id="p-link" expression="execution(* com.zblog.service.LinkService.insert*(..)) || execution(* com.zblog.service.LinkService.remove*(..))" />
      <aop:after method="staticLinks" pointcut-ref="p-link" />
    </aop:aspect>
  </aop:config>
  
</beans>