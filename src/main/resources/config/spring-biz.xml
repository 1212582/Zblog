<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.springframework.org/schema/aop 
                           http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">
   
  <context:component-scan base-package="com.zblog.biz" />
  <aop:config proxy-target-class="true">
    <aop:aspect ref="staticTemplate">
      <!-- 定义切点· -->
      <aop:pointcut id="p-category" expression="execution(* com.zblog.service.CategoryService.insert*(..)) || 
          execution(* com.zblog.service.CategoryService.remove*(..))" />
      <aop:after method="staticHeader" pointcut-ref="p-category" />
      
      <!-- 注意:中间的必须用and 不能用 && -->
      <aop:pointcut expression="target(com.zblog.service.LinkService) and (execution(* insert*(..)) || 
          execution(* delete*(..)) || execution(* update*(..)))" id="p-link" />
      <aop:after method="staticLinks" pointcut-ref="p-link" />
    </aop:aspect>
    
    <aop:aspect ref="postIndexManager">
      <aop:pointcut expression="execution(* com.zblog.biz.PostManager.insertPost(..)) and args(post,..)" id="p-post-insert" />
      <aop:pointcut expression="execution(* com.zblog.biz.PostManager.updatePost(..)) and args(post,..)" id="p-post-update" />
      <aop:pointcut expression="execution(* com.zblog.biz.PostManager.removePost(java.lang.String)) and args(postid)" id="p-post-remove" />
      <aop:after method="insert" pointcut-ref="p-post-insert" arg-names="post" />
      <aop:after method="update" pointcut-ref="p-post-update" arg-names="post" />
      <aop:after method="remove" pointcut-ref="p-post-remove" arg-names="postid" />
    </aop:aspect>
  </aop:config>
  
</beans>